- if current_user
  = button_to "Refresh", email_path(id: current_user.id), :class => "btn btn-large btn-primary",:style => "float: center",  :method => :put
  %table.table-condensed
    %caption= t :emails
    %tr.table_header
      %th= t :subject
      %th= t :from
      %th= t :date
    %tbody
      = render partial:'email', collection: @emails
  %br
  = will_paginate @emails, :renderer => BootstrapPagination::Rails
- else
  %h1 TestProject
  %a.auth_provider{:href => "/auth/google_oauth2"}
    = image_tag "google_apps_64.png", size: "64x64", alt: "Google"
