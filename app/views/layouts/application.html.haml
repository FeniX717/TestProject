%html
  %head
    %title OmniAuth Example
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tag
  %body
    %nav{:class => "navbar navbar-default"}
      .container
        .row
          %div{:class => "col-md-4"}
            %h1 TestProject
          %div{:class => "col-md-4 col-md-offset-4"}
            = link_to_unless I18n.locale == :en, "English", locale: :en
            |
            \#{link_to_unless I18n.locale == :ru, "Russian", locale: :ru}
            - if session[:user_id]
              = link_to (t :log_out), logout_path
            - else
              %a.auth_provider{:href => "/auth/google_oauth2"}
                = image_tag "google_apps_64.png", size: "64x64", alt: "Google"
                =t :sign_in
    = yield

